{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "router": {
            "type": "string"
        },
        "server": {
            "additionalProperties": false,
            "properties": {
                "port": {
                    "type": "number"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "version"
            ],
            "type": "object"
        },
        "service": {
            "additionalProperties": false,
            "properties": {
                "mailer": {
                    "type": "string"
                }
            },
            "required": [
                "mailer"
            ],
            "type": "object"
        },
        "verboseDebug": {
            "type": "boolean"
        },
        "webFormReceiver": {
            "type": "string"
        }
    },
    "required": [
        "name",
        "router",
        "server",
        "verboseDebug",
        "webFormReceiver"
    ],
    "type": "object"
}

